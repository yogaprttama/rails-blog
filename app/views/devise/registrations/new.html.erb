<main class="mx-auto max-w-96" id="main">
  <h1 class="text-2xl leading-9 font-bold mb-6 xl:text-4xl">Sign up</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="form-group">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control block w-full" %>
    </div>

    <div class="form-group">
      <% if @minimum_password_length %>
        <div class="flex items-center gap-x-3 mb-2">
          <%= f.label :password, class: "text-sm leading-6 text-gray-900 font-medium" %>
          <p class="text-sm italic text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
        </div>
      <% else %>
          <%= f.label :password, class: "label" %>
      <% end %>
      <%= f.password_field :password, class: "form-control block w-full" %>
    </div>

    <div class="form-group">
      <label class="label" for="user_password_confirmation">Confirm password</label>
      <%= f.password_field :password_confirmation, class: "form-control block w-full" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn block w-full bg-orange-500 text-white px-3.5 py-2.5 hover:bg-orange-600" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
