<%= form_with model: @post do |f| %>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="border-b border-gray-200 pb-12">
    <div class="flex flex-col gap-y-6">
      <div class="field">
        <%= f.label :title, "Title", class: "label" %>
        <%= f.text_field :title, class: "form-control block w-full" %>
      </div>
      <div class="field">
        <%= f.label :content, "Content", class: "label" %>
        <%= f.text_area :content, size: "60x10", class: "form-control block w-full" %>
      </div>
      <div class="field">
        <%= f.label :excerpt, "Excerpt", class: "label" %>
        <%= f.text_area :excerpt, size: "60x5", class: "form-control block w-full" %>
      </div>
      <div class="field">
        <div class="label">Status</div>
        <div class="flex items-center gap-x-3">
          <%= f.label :status, "Draft", class: "order-2" %>
          <%= f.radio_button :status, "DRAFT", class: "order-1" %>
        </div>
        <div class="flex items-center gap-x-3">
          <%= f.label :status, "Publish", class: "order-2" %>
          <%= f.radio_button :status, "PUBLISHED", class: "order-1" %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions mt-6 mb-6 flex items-center justify-end gap-x-3">
    <%= link_to "Cancel", posts_index_path(tab: "published"), class: "btn text-neutral-500 px-3 py-2 hover:text-gray-900" %>
    <%= f.submit class: "btn block bg-orange-500 text-white px-3 py-2 hover:bg-orange-600" %>
  </div>
<% end %>
