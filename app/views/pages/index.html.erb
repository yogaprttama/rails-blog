<main class="mx-auto max-w-2.5xl" id="main">
  <h2 class="text-3xl font-bold text-gray-900 md:text-4xl">Blog</h2>
  <p class="mt-2 text-lg leading-8 text-gray-600">A small part of my thoughts and experiences acquired through my career as a web developer, turned into articles.</p>
  <div class="mt-10 border-t border-gray-200 pt-10 space-y-16 md:mt-16 md:pt-16">
    <% @posts.each do |post| %>
      <article class="relative pt-7">
        <h2 class="text-lg font-semibold leading-6 text-gray-900 hover:text-orange-600">
          <%= link_to post.title, blog_path(post.slug) %>
        </h2>
        <time class="absolute top-0 inset-x-0 text-xs text-gray-500"><%= post.created_at.strftime("%b %d, %Y") %></time>
        <p class="mt-5 line-clamp-2 text-sm leading-6 text-gray-600"><%= post.excerpt %></p>
      </article>
    <% end %>
  </div>
</main>
